    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Store playbook data for each card
        const playbookData = {};
        
        // Initialize playbook data from cards
        document.querySelectorAll('.playbook-card').forEach((card, index) => {
            const title = card.querySelector('.playbook-title').textContent;
            const description = card.querySelector('.playbook-description').textContent.trim();
            const useBtn = card.querySelector('.btn-use-playbook');
            const type = new URLSearchParams(useBtn.href.split('?')[1]).get('type');
            
            playbookData[index] = { title, description, type };
        });

        // Handle Preview button clicks
        document.querySelectorAll('.btn-preview').forEach((btn, index) => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const playbook = playbookData[index];
                showPreview(playbook);
            });
        });

        // Handle Use Playbook button clicks
        document.querySelectorAll('.btn-use-playbook').forEach((btn, index) => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const playbook = playbookData[index];
                showCampaignSetup(playbook);
            });
        });

        // Show preview modal
        function showPreview(playbook) {
            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                <div class="p-4">
                    <h4 class="fw-bold mb-3">${playbook.title}</h4>
                    <p class="text-muted mb-4">${playbook.description}</p>
                    <div class="popup-preview-box border rounded p-4" style="background: white; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                        <div class="mb-3">
                            <img src="https://via.placeholder.com/500x300/e0e7ff/4c1d95?text=${encodeURIComponent(playbook.title)}" 
                                 class="img-fluid rounded" alt="Preview">
                        </div>
                        <h5 class="fw-bold">${playbook.title} Preview</h5>
                        <p class="text-muted small">This is a sample preview of your popup campaign. The actual design will be customizable in the editor.</p>
                    </div>
                </div>
            `;
            
            // Store playbook info for "Use This Playbook" button
            document.getElementById('useFromPreview').onclick = function() {
                const previewModalEl = document.getElementById('previewModal');
                const previewModal = bootstrap.Modal.getInstance(previewModalEl);
                previewModal.hide();
                showCampaignSetup(playbook);
            };
            
            const previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
            previewModal.show();
        }

        // Show campaign setup modal
        function showCampaignSetup(playbook) {
            document.getElementById('selectedPlaybookType').value = playbook.type;
            document.getElementById('campaignName').value = playbook.title;
            
            // Show playbook info in modal
            document.getElementById('modalPlaybookPreview').innerHTML = `
                <div class="d-inline-block px-3 py-2 bg-light rounded">
                    <small class="text-muted">Selected Playbook:</small>
                    <strong class="ms-2">${playbook.title}</strong>
                </div>
            `;
            
            const setupModal = new bootstrap.Modal(document.getElementById('campaignSetupModal'));
            setupModal.show();
        }

        // Handle website select change
        document.getElementById('websiteSelect').addEventListener('change', function() {
            const newWebsiteInput = document.getElementById('newWebsiteInput');
            if (this.value === 'add-new') {
                newWebsiteInput.style.display = 'block';
                document.getElementById('newWebsiteUrl').required = true;
            } else {
                newWebsiteInput.style.display = 'none';
                document.getElementById('newWebsiteUrl').required = false;
            }
        });

        // Handle campaign setup form submission
        document.getElementById('campaignSetupForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const campaignName = formData.get('name');
            const popupType = formData.get('popupType');
            const website = formData.get('website');
            
            // If adding new website, get the URL
            if (website === 'add-new') {
                const newWebsite = document.getElementById('newWebsiteUrl').value;
                // Here you would typically save the new website to the database
                console.log('New website:', newWebsite);
            }
            
            // Redirect to Designer page with campaign info
            window.location.href = `/Popup/Designer?name=${encodeURIComponent(campaignName)}&type=${popupType}`;
        });

        // Back button functionality
        document.getElementById('backButton')?.addEventListener('click', function() {
            window.location.href = '/Popup/CreateCampaign';
        });
    </script>
