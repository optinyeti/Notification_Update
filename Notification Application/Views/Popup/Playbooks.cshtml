            font-weight: 700;
            color: #1e293b;
            margin-bottom: 12px;
        }

        .playbook-description {
            font-size: 15px;
            color: #64748b;
            line-height: 1.6;
            margin-bottom: 16px;
        }

        .playbook-meta {
            display: flex;
            align-items: center;
            gap: 16px;
            font-size: 13px;
            color: #94a3b8;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #64748b;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 32px;
            transition: color 0.3s;
        }

