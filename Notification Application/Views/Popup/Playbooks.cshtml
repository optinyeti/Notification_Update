            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 24px;
            margin-top: 40px;
        }

        .playbook-card {
            background: white;
            border-radius: 16px;
            padding: 32px;
            transition: all 0.3s ease;
            border: 2px solid #e2e8f0;
        }

        .playbook-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            border-color: #3b82f6;
        }

        .playbook-buttons {
            display: flex;
            gap: 12px;
            margin-top: 24px;
        }

        .btn-use-playbook {
            flex: 1;
            background: #84cc16;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-use-playbook:hover {
            background: #65a30d;
            color: white;
        }

        .btn-preview {
            flex: 1;
            background: #64748b;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-preview:hover {
            background: #475569;
            color: white;
        }

        .playbook-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 20px;
        }

        .playbook-title {
