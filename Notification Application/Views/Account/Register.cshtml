@using Notification_Application.Controllers
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-12 flex items-center justify-center bg-blue-600 rounded-full">
                <i class="fas fa-window-restore text-white text-xl"></i>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Already have an account? <a asp-action="Login" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
            </p>
        </div>
        
        <form class="mt-8 space-y-6" asp-action="Register" method="post">
            <div class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                        <input asp-for="FirstName" type="text" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input asp-for="LastName" type="text" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                    </div>
                </div>
                
                <div>
                    <label for="CompanyName" class="block text-sm font-medium text-gray-700">Company Name</label>
                    <input asp-for="CompanyName" type="text" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    <span asp-validation-for="CompanyName" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input asp-for="Email" type="email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" type="password" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Create Account
                </button>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}