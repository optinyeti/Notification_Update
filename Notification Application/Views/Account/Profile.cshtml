@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
                <p class="mt-2 text-sm text-gray-600">Manage your personal information and account settings</p>
            </div>
            <div class="h-20 w-20 rounded-full bg-gradient-to-br from-blue-600 to-blue-700 flex items-center justify-center ring-4 ring-blue-100 shadow-lg">
                <span class="text-white text-3xl font-bold">
                    @Model.FirstName?.Substring(0, 1).ToUpper()@Model.LastName?.Substring(0, 1).ToUpper()
                </span>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Information Form -->
        <div class="lg:col-span-2">
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-5 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Profile Information</h3>
                    <p class="mt-1 text-sm text-gray-500">Update your personal details</p>
                </div>

                <form asp-action="Profile" method="post" class="px-6 py-6 space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                    <!-- Email (read-only) -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <input asp-for="Email" type="email" readonly
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-600 cursor-not-allowed" />
                        <p class="mt-1 text-xs text-gray-500">
                            <i class="fas fa-info-circle mr-1"></i>Email cannot be changed
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- First Name -->
                        <div>
                            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="FirstName" type="text"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <span asp-validation-for="FirstName" class="text-red-600 text-xs"></span>
                        </div>

                        <!-- Last Name -->
                        <div>
                            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="LastName" type="text"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <span asp-validation-for="LastName" class="text-red-600 text-xs"></span>
                        </div>
                    </div>

                    <!-- Save Button -->
                    <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                        <a asp-controller="Home" asp-action="Dashboard" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">
                            <i class="fas fa-save mr-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Account Details Sidebar -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Account Info -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-5 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Account Details</h3>
                </div>
                <div class="px-6 py-5 space-y-4">
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Company</p>
                        <p class="mt-1 text-sm text-gray-900">@Model.CompanyName</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Role</p>
                        <p class="mt-1">
                            @if (Model.Role == "SuperAdmin")
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                    <i class="fas fa-crown mr-1"></i>Super Admin
                                </span>
                            }
                            else if (Model.Role == "Admin")
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    <i class="fas fa-user-shield mr-1"></i>Admin
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    <i class="fas fa-user mr-1"></i>User
                                </span>
                            }
                        </p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Member Since</p>
                        <p class="mt-1 text-sm text-gray-900">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                    </div>
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div>
                            <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Last Login</p>
                            <p class="mt-1 text-sm text-gray-900">@Model.LastLoginAt.Value.ToString("MMMM dd, yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-5 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
                </div>
                <div class="px-6 py-5 space-y-3">
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <a asp-controller="Admin" asp-action="Settings" class="flex items-center text-sm text-gray-700 hover:text-blue-600">
                            <i class="fas fa-cog mr-3 text-gray-400"></i>
                            Account Settings
                        </a>
                        <a asp-controller="Admin" asp-action="Subscription" class="flex items-center text-sm text-gray-700 hover:text-blue-600">
                            <i class="fas fa-credit-card mr-3 text-gray-400"></i>
                            Manage Subscription
                        </a>
                    }
                    <a asp-controller="Admin" asp-action="Support" class="flex items-center text-sm text-gray-700 hover:text-blue-600">
                        <i class="fas fa-life-ring mr-3 text-gray-400"></i>
                        Get Support
                    </a>
                    <hr class="my-2" />
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="flex items-center text-sm text-red-600 hover:text-red-700 w-full text-left">
                            <i class="fas fa-sign-out-alt mr-3"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
