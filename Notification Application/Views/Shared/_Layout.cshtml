<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Popup Manager Pro</title>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WHQDRT72');</script>
    <!-- End Google Tag Manager -->

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Notification_Application.styles.css" asp-append-version="true" />
    
    <!-- Render additional styles section if defined -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WHQDRT72"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <header class="bg-white shadow-sm border-b">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo and Brand -->
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a asp-controller="Home" asp-action="Index" class="flex items-center">
                            <i class="fas fa-window-restore text-blue-600 text-2xl mr-3"></i>
                            <span class="text-xl font-bold text-gray-900">Popup Manager Pro</span>
                        </a>
                    </div>

                    <!-- Main Navigation (when authenticated) -->
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Home" asp-action="Index" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Dashboard
                            </a>
                            <a asp-controller="Popup" asp-action="Index" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Popups
                            </a>
                            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                            {
                                <a asp-controller="Admin" asp-action="Blog" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                    Blog
                                </a>
                                <a asp-controller="Admin" asp-action="Analytics" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                    Analytics
                                </a>
                                <a asp-controller="Admin" asp-action="Index" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                    Admin
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Public Navigation -->
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Home" asp-action="Features" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Features
                            </a>
                            <a asp-controller="Home" asp-action="Pricing" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Pricing
                            </a>
                            <a asp-controller="Blog" asp-action="Index" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Blog
                            </a>
                            <a asp-controller="Home" asp-action="Demo" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">
                                Demo
                            </a>
                        </div>
                    }
                </div>

                <!-- Right Side Navigation -->
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="flex items-center space-x-4">
                            <a asp-controller="Popup" asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition">
                                <i class="fas fa-plus mr-2"></i>New Popup
                            </a>

                            <!-- User Profile Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-link p-0 dropdown-toggle d-flex align-items-center text-decoration-none" 
                                        type="button" 
                                        id="userMenuDropdown" 
                                        data-bs-toggle="dropdown" 
                                        aria-expanded="false">
                                    <div class="h-9 w-9 rounded-full bg-gradient-to-br from-blue-600 to-blue-700 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                        <span class="text-white text-sm font-semibold">
                                            @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                        </span>
                                    </div>
                                </button>

                                <!-- Dropdown Menu -->
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="userMenuDropdown" style="min-width: 14rem;">
                                    <!-- User Info Section -->
                                    <li class="px-3 py-2 border-bottom">
                                        <p class="mb-1 fw-medium text-dark small">@User.Identity.Name</p>
                                        <p class="mb-0 text-muted" style="font-size: 0.75rem;">
                                            @if (User.IsInRole("SuperAdmin"))
                                            {
                                                <span class="badge bg-purple text-white">
                                                    <i class="fas fa-crown me-1"></i>Super Admin
                                                </span>
                                            }
                                            else if (User.IsInRole("Admin"))
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-user-shield me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-user me-1"></i>User
                                                </span>
                                            }
                                        </p>
                                    </li>

                                    <!-- Menu Items -->
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user-circle me-2 text-muted"></i>My Profile
                                    </a></li>
                                    
                                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings">
                                            <i class="fas fa-cog me-2 text-muted"></i>Settings
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Subscription">
                                            <i class="fas fa-credit-card me-2 text-muted"></i>Subscription
                                        </a></li>
                                    }

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Support & Logout -->
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Support">
                                        <i class="fas fa-life-ring me-2 text-muted"></i>Support
                                    </a></li>
                                    
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-2">
                                            <button type="submit" class="btn btn-sm btn-danger w-100 d-flex align-items-center justify-content-center">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center space-x-4">
                            <a asp-controller="Account" asp-action="Login" class="text-gray-500 hover:text-gray-700 px-3 py-2 text-sm font-medium">
                                Login
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition">
                                Get Started
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 border border-green-200 rounded-lg p-4 m-4" id="success-message">
                <div class="flex">
                    <i class="fas fa-check-circle text-green-400"></i>
                    <p class="text-sm font-medium text-green-800 ml-3">@TempData["Success"]</p>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 m-4" id="error-message">
                <div class="flex">
                    <i class="fas fa-exclamation-circle text-red-400"></i>
                    <p class="text-sm font-medium text-red-800 ml-3">@TempData["Error"]</p>
                </div>
            </div>
        }

        <!-- Page Content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <p class="text-gray-500 text-sm">
                    &copy; @DateTime.Now.Year Popup Manager Pro. All rights reserved.
                </p>
                <div class="flex space-x-6">
                    <a asp-controller="Home" asp-action="Privacy" class="text-gray-500 hover:text-gray-700 text-sm">
                        Privacy Policy
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="text-gray-500 hover:text-gray-700 text-sm">
                        Contact
                    </a>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Admin" asp-action="Support" class="text-gray-500 hover:text-gray-700 text-sm">
                            Support
                        </a>
                    }
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Auto-hide messages script -->
    <script>
        // Auto-hide success/error messages after 5 seconds
        setTimeout(function() {
            const successMsg = document.getElementById('success-message');
            const errorMsg = document.getElementById('error-message');

            if (successMsg) {
                successMsg.style.transition = 'opacity 0.5s';
                successMsg.style.opacity = '0';
                setTimeout(() => successMsg.remove(), 500);
            }

            if (errorMsg) {
                errorMsg.style.transition = 'opacity 0.5s';
                errorMsg.style.opacity = '0';
                setTimeout(() => errorMsg.remove(), 500);
            }
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>