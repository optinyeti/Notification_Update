@{
    ViewData["Title"] = "Features - Popup Manager Pro";
}

<div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Header -->
    <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">Powerful Features for High-Converting Popups</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Everything you need to create, customize, and optimize popups that drive real results for your business.</p>
    </div>

    <!-- Main Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <!-- WYSIWYG Editor -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-paint-brush text-blue-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">WYSIWYG Editor</h3>
            <p class="text-gray-600 mb-4">Create stunning popups with our intuitive drag-and-drop editor. No coding required - just point, click, and design.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Drag & drop components</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Live preview</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Pre-built templates</li>
            </ul>
        </div>

        <!-- Smart Targeting -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-crosshairs text-green-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Smart Targeting</h3>
            <p class="text-gray-600 mb-4">Show the right message to the right people at the perfect moment with advanced targeting rules.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Behavioral triggers</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Geographic targeting</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Device-specific rules</li>
            </ul>
        </div>

        <!-- Advanced Analytics -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-chart-line text-purple-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Advanced Analytics</h3>
            <p class="text-gray-600 mb-4">Track performance with detailed analytics and optimize your popups for better conversion rates.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Real-time statistics</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>A/B testing</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Conversion tracking</li>
            </ul>
        </div>

        <!-- Multiple Popup Types -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-layer-group text-orange-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">8 Popup Types</h3>
            <p class="text-gray-600 mb-4">Choose from a variety of popup formats designed for different use cases and conversion goals.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Email collectors</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Promotional banners</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Interactive spin wheels</li>
            </ul>
        </div>

        <!-- Integrations -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-indigo-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-plug text-indigo-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Powerful Integrations</h3>
            <p class="text-gray-600 mb-4">Connect with your favorite tools and automatically sync captured leads to your marketing stack.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Zapier automation</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Email marketing tools</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>CRM platforms</li>
            </ul>
        </div>

        <!-- Mobile Optimized -->
        <div class="bg-white rounded-lg shadow-lg p-8 border">
            <div class="bg-red-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-mobile-alt text-red-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Mobile Optimized</h3>
            <p class="text-gray-600 mb-4">All popups are automatically optimized for mobile devices, ensuring great user experience across all screens.</p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Responsive design</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Touch-friendly interactions</li>
                <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i>Fast loading times</li>
            </ul>
        </div>
    </div>

    <!-- Detailed Features Section -->
    <div class="bg-gray-50 rounded-xl p-8 mb-16">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Complete Feature Breakdown</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Design & Customization -->
            <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-palette text-blue-600 mr-3"></i>
                    Design & Customization
                </h3>
                <ul class="space-y-3 text-gray-600">
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Drag & drop WYSIWYG editor
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        50+ pre-designed templates
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Custom CSS support
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Brand color customization
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Font and typography controls
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Image and video uploads
                    </li>
                </ul>
            </div>

            <!-- Targeting & Triggers -->
            <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-bullseye text-green-600 mr-3"></i>
                    Targeting & Triggers
                </h3>
                <ul class="space-y-3 text-gray-600">
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Exit-intent detection
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Time-based triggers
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Scroll percentage targeting
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Page-specific rules
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Geographic targeting
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-3"></i>
                        Device and browser targeting
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-blue-600 rounded-xl p-8 text-center text-white">
        <h2 class="text-3xl font-bold mb-4">Ready to Boost Your Conversions?</h2>
        <p class="text-xl text-blue-100 mb-8">Start creating high-converting popups with our professional WYSIWYG editor today.</p>
        
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Popup" asp-action="Create" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition inline-block">
                <i class="fas fa-plus mr-2"></i>Create Your First Popup
            </a>
        }
        else
        {
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Account" asp-action="Register" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition">
                    Start Free Trial
                </a>
                <a asp-controller="Home" asp-action="Demo" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition">
                    View Demo
                </a>
            </div>
        }
    </div>
</div>