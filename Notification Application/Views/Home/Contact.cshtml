@model ContactFormModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="max-w-4xl mx-auto px-4 py-12">
    <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Get in Touch</h1>
        <p class="text-xl text-gray-600">Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-6">Send us a Message</h2>
            
            <form asp-action="Contact" method="post" class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                    <input asp-for="Name" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Company" class="block text-sm font-medium text-gray-700 mb-2">Company (Optional)</label>
                    <input asp-for="Company" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <span asp-validation-for="Company" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                    <textarea asp-for="Message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required></textarea>
                    <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                    Send Message
                </button>
            </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
            <div class="bg-blue-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-blue-900 mb-4">Contact Information</h3>
                
                <div class="space-y-4">
                    <div class="flex items-center">
                        <i class="fas fa-envelope text-blue-600 w-6"></i>
                        <span class="ml-3 text-gray-700">support@popupmanagerpro.com</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-phone text-blue-600 w-6"></i>
                        <span class="ml-3 text-gray-700">1-800-POPUP-HELP</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-map-marker-alt text-blue-600 w-6"></i>
                        <span class="ml-3 text-gray-700">123 Tech Street, Digital City, DC 12345</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-clock text-blue-600 w-6"></i>
                        <span class="ml-3 text-gray-700">Mon-Fri: 9AM-6PM EST</span>
                    </div>
                </div>
            </div>

            <div class="bg-green-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-green-900 mb-4">Quick Support</h3>
                <p class="text-green-800 mb-4">Need immediate help? Check out our resources:</p>
                <div class="space-y-2">
                    <a href="#" class="block text-green-700 hover:text-green-900 underline">Documentation & Guides</a>
                    <a href="#" class="block text-green-700 hover:text-green-900 underline">Video Tutorials</a>
                    <a href="#" class="block text-green-700 hover:text-green-900 underline">FAQ</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Admin" asp-action="Support" class="block text-green-700 hover:text-green-900 underline">Support Tickets</a>
                    }
                </div>
            </div>

            <div class="bg-purple-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-purple-900 mb-4">Sales Inquiries</h3>
                <p class="text-purple-800 mb-4">Interested in our premium plans?</p>
                <div class="space-y-2">
                    <a href="#" class="block text-purple-700 hover:text-purple-900 underline">Schedule a Demo</a>
                    <a asp-controller="Home" asp-action="Pricing" class="block text-purple-700 hover:text-purple-900 underline">View Pricing</a>
                    <a href="mailto:sales@popupmanagerpro.com" class="block text-purple-700 hover:text-purple-900 underline">sales@popupmanagerpro.com</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}