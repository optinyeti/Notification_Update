@{
    ViewData["Title"] = "Professional Popup Manager SaaS";
}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white">
    <div class="max-w-7xl mx-auto px-4 py-20">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <h1 class="text-4xl lg:text-6xl font-bold mb-6">
                    Create Stunning Popups with Our WYSIWYG Editor
                </h1>
                <p class="text-xl text-blue-100 mb-8">
                    Design, target, and launch high-converting popups with our professional drag-and-drop editor. 
                    Increase conversions and grow your email list effortlessly.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a asp-controller="Account" asp-action="Register" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition text-center">
                        Start Free Trial
                    </a>
                    <a asp-controller="Home" asp-action="Demo" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition text-center">
                        View Demo
                    </a>
                </div>
                <p class="text-sm text-blue-200 mt-4">? No credit card required • ? 14-day free trial</p>
            </div>
            <div class="text-center">
                <div class="bg-white p-8 rounded-xl shadow-2xl">
                    <h3 class="text-gray-800 font-semibold mb-4">WYSIWYG Popup Editor</h3>
                    <div class="bg-gray-100 rounded-lg p-6 mb-4">
                        <div class="bg-blue-500 text-white p-4 rounded-lg">
                            <h4 class="font-bold">Get 20% Off!</h4>
                            <p class="text-sm">Enter your email below</p>
                            <input type="email" placeholder="your@email.com" class="w-full mt-2 p-2 rounded text-gray-800">
                            <button class="bg-green-500 text-white w-full p-2 rounded mt-2">Claim Discount</button>
                        </div>
                    </div>
                    <p class="text-gray-600 text-sm">Drag & Drop • Live Preview • Mobile Ready</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
                Everything You Need to Create High-Converting Popups
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Our comprehensive popup platform includes all the tools you need to design, target, and optimize your popups for maximum conversions.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- WYSIWYG Editor -->
            <div class="text-center p-6">
                <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-paint-brush text-blue-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">WYSIWYG Editor</h3>
                <p class="text-gray-600">Drag-and-drop editor with live preview, responsive controls, and reusable components for all popup types.</p>
            </div>

            <!-- Advanced Targeting -->
            <div class="text-center p-6">
                <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-crosshairs text-green-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Smart Targeting</h3>
                <p class="text-gray-600">Target visitors based on behavior, location, device, referrer, and custom rules for maximum relevance.</p>
            </div>

            <!-- Analytics -->
            <div class="text-center p-6">
                <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-chart-line text-purple-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Detailed Analytics</h3>
                <p class="text-gray-600">Track views, clicks, conversions, and ROI with comprehensive analytics and conversion tracking.</p>
            </div>

            <!-- Multiple Popup Types -->
            <div class="text-center p-6">
                <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-layer-group text-orange-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">8 Popup Types</h3>
                <p class="text-gray-600">Email capture, promotions, lightbox, inline, spin wheel, video popups, coupons, and announcements.</p>
            </div>

            <!-- Integrations -->
            <div class="text-center p-6">
                <div class="bg-indigo-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-plug text-indigo-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Integrations</h3>
                <p class="text-gray-600">Connect with Zapier, Mailchimp, HubSpot, Google Analytics, and 1000+ other tools.</p>
            </div>

            <!-- Mobile Optimized -->
            <div class="text-center p-6">
                <div class="bg-red-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-mobile-alt text-red-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Mobile Ready</h3>
                <p class="text-gray-600">All popups are fully responsive and optimized for mobile, tablet, and desktop devices.</p>
            </div>
        </div>
    </div>
</section>

<!-- Popup Types Section -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
                Choose from 8 Professional Popup Types
            </h2>
            <p class="text-xl text-gray-600">All created with our powerful WYSIWYG drag-and-drop editor</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-blue-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-envelope text-blue-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Email Collector</h3>
                <p class="text-gray-600 text-sm">Capture emails with beautiful opt-in forms and grow your subscriber list.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-green-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-bullhorn text-green-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Advertising</h3>
                <p class="text-gray-600 text-sm">Promote products, services, or special offers with eye-catching designs.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-purple-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-expand text-purple-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Lightbox</h3>
                <p class="text-gray-600 text-sm">Full-screen overlay modals with centered content for maximum impact.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-orange-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-gamepad text-orange-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Spin Wheel</h3>
                <p class="text-gray-600 text-sm">Gamified interactive experiences to boost engagement and conversions.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-red-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-play text-red-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Video Popup</h3>
                <p class="text-gray-600 text-sm">Showcase videos in engaging popup overlays with custom controls.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-yellow-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-tag text-yellow-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Coupon/Discount</h3>
                <p class="text-gray-600 text-sm">Offer exclusive discount codes to incentivize purchases.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-indigo-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-info-circle text-indigo-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Message</h3>
                <p class="text-gray-600 text-sm">Simple notification popups for announcements and alerts.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border hover:shadow-lg transition">
                <div class="bg-teal-100 p-3 rounded-lg mb-4 w-fit">
                    <i class="fas fa-align-left text-teal-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Inline</h3>
                <p class="text-gray-600 text-sm">Embedded popups that appear within your page content seamlessly.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-blue-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
            Ready to Boost Your Conversions?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
            Join thousands of businesses using Popup Manager to create high-converting popups with our professional WYSIWYG editor.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Account" asp-action="Register" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition">
                Start Your Free Trial
            </a>
            <a asp-controller="Home" asp-action="Contact" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition">
                Contact Sales
            </a>
        </div>
    </div>
</section>