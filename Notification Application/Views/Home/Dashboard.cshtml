@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
        <p class="text-gray-600 mt-2">Welcome back! Here's an overview of your popup performance.</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-blue-100 p-3 rounded-lg">
                    <i class="fas fa-window-restore text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Total Popups</h3>
                    <p class="text-2xl font-bold text-blue-600">@Model.TotalPopups</p>
                </div>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-green-100 p-3 rounded-lg">
                    <i class="fas fa-play text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Active Popups</h3>
                    <p class="text-2xl font-bold text-green-600">@Model.ActivePopups</p>
                </div>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-purple-100 p-3 rounded-lg">
                    <i class="fas fa-eye text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Total Views</h3>
                    <p class="text-2xl font-bold text-purple-600">@((Model.AnalyticsSummary as dynamic)?.TotalViews ?? 0)</p>
                </div>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-orange-100 p-3 rounded-lg">
                    <i class="fas fa-mouse-pointer text-orange-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Conversions</h3>
                    <p class="text-2xl font-bold text-orange-600">@((Model.AnalyticsSummary as dynamic)?.TotalConversions ?? 0)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Recent Popups -->
        <div class="lg:col-span-2 bg-white rounded-lg shadow border">
            <div class="p-6 border-b">
                <div class="flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-gray-800">Recent Popups</h2>
                    <a asp-controller="Popup" asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                        <i class="fas fa-plus mr-2"></i>Create New
                    </a>
                </div>
            </div>
            <div class="p-6">
                @if (Model.RecentPopups.Any())
                {
                    <div class="space-y-4">
                        @foreach (var popup in Model.RecentPopups)
                        {
                            <div class="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50">
                                <div class="flex items-center space-x-4">
                                    <div class="bg-gray-100 p-2 rounded-lg">
                                        <i class="fas fa-@(popup.Type.ToString().ToLower()) text-gray-600"></i>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-800">@popup.Name</h3>
                                        <p class="text-sm text-gray-500">@popup.Type | @popup.CreatedAt.ToString("MMM dd, yyyy")</p>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-4">
                                    <span class="px-2 py-1 rounded-full text-xs font-medium @(popup.Status == PopupStatus.Published ? "bg-green-100 text-green-800" : popup.Status == PopupStatus.Draft ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                        @popup.Status
                                    </span>
                                    <a asp-controller="Popup" asp-action="Edit" asp-route-id="@popup.Id" class="text-blue-600 hover:text-blue-800">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-window-restore text-gray-300 text-4xl mb-4"></i>
                        <h3 class="text-lg font-medium text-gray-500">No popups yet</h3>
                        <p class="text-gray-400 mt-2">Create your first popup to get started</p>
                        <a asp-controller="Popup" asp-action="Create" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 mt-4 inline-block">
                            Create Your First Popup
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow border">
            <div class="p-6 border-b">
                <h2 class="text-xl font-semibold text-gray-800">Quick Actions</h2>
            </div>
            <div class="p-6 space-y-4">
                <a asp-controller="Popup" asp-action="Create" class="block w-full bg-blue-50 hover:bg-blue-100 p-4 rounded-lg border border-blue-200">
                    <div class="flex items-center">
                        <i class="fas fa-plus text-blue-600 text-xl mr-3"></i>
                        <div>
                            <h3 class="font-medium text-blue-800">Create New Popup</h3>
                            <p class="text-sm text-blue-600">Start building your next popup</p>
                        </div>
                    </div>
                </a>

                <a asp-controller="Admin" asp-action="Analytics" class="block w-full bg-purple-50 hover:bg-purple-100 p-4 rounded-lg border border-purple-200">
                    <div class="flex items-center">
                        <i class="fas fa-chart-bar text-purple-600 text-xl mr-3"></i>
                        <div>
                            <h3 class="font-medium text-purple-800">View Analytics</h3>
                            <p class="text-sm text-purple-600">Check your popup performance</p>
                        </div>
                    </div>
                </a>

                <a asp-controller="Admin" asp-action="Settings" class="block w-full bg-green-50 hover:bg-green-100 p-4 rounded-lg border border-green-200">
                    <div class="flex items-center">
                        <i class="fas fa-cog text-green-600 text-xl mr-3"></i>
                        <div>
                            <h3 class="font-medium text-green-800">Account Settings</h3>
                            <p class="text-sm text-green-600">Manage your account</p>
                        </div>
                    </div>
                </a>

                <a asp-controller="Admin" asp-action="Support" class="block w-full bg-orange-50 hover:bg-orange-100 p-4 rounded-lg border border-orange-200">
                    <div class="flex items-center">
                        <i class="fas fa-life-ring text-orange-600 text-xl mr-3"></i>
                        <div>
                            <h3 class="font-medium text-orange-800">Get Support</h3>
                            <p class="text-sm text-orange-600">Contact our support team</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Getting Started Guide (for new users) -->
    @if (Model.TotalPopups == 0)
    {
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mt-8">
            <h2 class="text-xl font-semibold text-blue-800 mb-4">
                <i class="fas fa-rocket mr-2"></i>Get Started with Popup Manager
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3">1</div>
                    <h3 class="font-medium text-blue-800">Create Your First Popup</h3>
                    <p class="text-sm text-blue-600 mt-2">Choose from email collection, promotions, or announcements</p>
                </div>
                <div class="text-center">
                    <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3">2</div>
                    <h3 class="font-medium text-blue-800">Design with WYSIWYG Editor</h3>
                    <p class="text-sm text-blue-600 mt-2">Use our drag-and-drop editor to customize your popup</p>
                </div>
                <div class="text-center">
                    <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3">3</div>
                    <h3 class="font-medium text-blue-800">Publish & Track Results</h3>
                    <p class="text-sm text-blue-600 mt-2">Launch your popup and monitor performance analytics</p>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
    // Auto-hide success/error messages after 5 seconds
    setTimeout(function() {
        $('.alert').fadeOut();
    }, 5000);
</script>
}