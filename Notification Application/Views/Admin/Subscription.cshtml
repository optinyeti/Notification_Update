@model Tenant
@{
    ViewData["Title"] = "Subscription";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Subscription</h1>
        <p class="text-gray-600 mt-2">Manage your subscription plan and billing</p>
    </div>

    <!-- Current Plan -->
    <div class="bg-white rounded-lg shadow border mb-8">
        <div class="p-6 border-b">
            <h2 class="text-xl font-semibold text-gray-900">Current Plan</h2>
        </div>
        <div class="p-6">
            <div class="flex justify-between items-center">
                <div>
                    <h3 class="text-2xl font-bold text-blue-600">@Model.SubscriptionPlan?.Name</h3>
                    <p class="text-gray-600">@Model.SubscriptionPlan?.Description</p>
                    @if (!string.IsNullOrEmpty(Model.StripeSubscriptionId))
                    {
                        <div class="mt-2">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                                @(Model.SubscriptionStatus == "active" ? "bg-green-100 text-green-800" : 
                                  Model.SubscriptionStatus == "past_due" ? "bg-yellow-100 text-yellow-800" : 
                                  Model.SubscriptionStatus == "canceled" ? "bg-red-100 text-red-800" : 
                                  "bg-gray-100 text-gray-800")">
                                @(Model.SubscriptionStatus ?? "Unknown")
                            </span>
                        </div>
                        @if (Model.SubscriptionEndDate.HasValue)
                        {
                            <p class="text-sm text-gray-500 mt-2">
                                @(Model.SubscriptionStatus == "canceled" ? "Ends" : "Renews") on @Model.SubscriptionEndDate.Value.ToString("MMMM dd, yyyy")
                            </p>
                        }
                    }
                </div>
                <div class="text-right">
                    <p class="text-3xl font-bold text-gray-900">$@Model.SubscriptionPlan?.MonthlyPrice<span class="text-lg font-normal text-gray-500">/month</span></p>
                    <div class="mt-3 space-x-2">
                        <a href="/Payment/Plans" class="text-blue-600 hover:underline">Change Plan</a>
                        @if (!string.IsNullOrEmpty(Model.StripeCustomerId))
                        {
                            <form asp-action="ManageBilling" asp-controller="Payment" method="post" style="display:inline;">
                                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm font-medium">
                                    Manage Billing
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Usage -->
    <div class="bg-white rounded-lg shadow border">
        <div class="p-6 border-b flex justify-between items-center">
            <h2 class="text-xl font-semibold text-gray-900">Usage This Month</h2>
            <form asp-action="SyncPopupCount" method="post" style="display:inline;">
                <button type="submit" class="text-sm bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                    Sync Popup Count
                </button>
            </form>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="flex justify-between mb-1">
                    <span class="text-sm font-medium text-gray-700">Popups</span>
                    <span class="text-sm font-medium text-gray-500">@Model.PopupCount / @(Model.SubscriptionPlan?.MaxPopups == -1 ? "Unlimited" : Model.SubscriptionPlan?.MaxPopups)</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-blue-600 h-2.5 rounded-full" style="width: @(Model.SubscriptionPlan?.MaxPopups > 0 ? (double)Model.PopupCount / Model.SubscriptionPlan.MaxPopups * 100 : 0)%"></div>
                </div>
                @if (Model.SubscriptionPlan?.MaxPopups > 0 && Model.PopupCount >= Model.SubscriptionPlan.MaxPopups)
                {
                    <p class="text-sm text-red-600 mt-2">⚠️ You've reached your popup limit. Delete some popups or upgrade your plan.</p>
                }
            </div>
            <div>
                <div class="flex justify-between mb-1">
                    <span class="text-sm font-medium text-gray-700">Popup Views</span>
                    <span class="text-sm font-medium text-gray-500">@Model.MonthlyPopupViews / @(Model.SubscriptionPlan?.MaxPopupViews == -1 ? "Unlimited" : Model.SubscriptionPlan?.MaxPopupViews)</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-green-600 h-2.5 rounded-full" style="width: @(Model.SubscriptionPlan?.MaxPopupViews > 0 ? (double)Model.MonthlyPopupViews / Model.SubscriptionPlan.MaxPopupViews * 100 : 0)%"></div>
                </div>
            </div>
        </div>
    </div>
</div>