@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Blog Management";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Blog Management</h1>
            <p class="text-gray-600 mt-2">Create and manage your blog posts</p>
        </div>
        <div class="flex gap-3">
            <a asp-action="BlogCategories" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                <i class="bi bi-tags me-2"></i>Manage Categories
            </a>
            <a asp-action="CreateBlogPost" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                <i class="bi bi-plus-circle me-2"></i>New Post
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    <!-- Blog Posts Table -->
    <div class="bg-white rounded-lg shadow">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Views</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categories</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        @foreach (var post in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <div class="font-medium text-gray-900">@post.Title</div>
                                    @if (!string.IsNullOrEmpty(post.Excerpt))
                                    {
                                        <div class="text-sm text-gray-500 mt-1">@post.Excerpt.Substring(0, Math.Min(100, post.Excerpt.Length))...</div>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    @(post.Author?.FirstName ?? "Unknown") @(post.Author?.LastName ?? "")
                                </td>
                                <td class="px-6 py-4">
                                    @if (post.Status == BlogPostStatus.Published)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                                    }
                                    else if (post.Status == BlogPostStatus.Draft)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Draft</span>
                                    }
                                    else if (post.Status == BlogPostStatus.Scheduled)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Scheduled</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Archived</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    <i class="bi bi-eye me-1"></i>@post.ViewCount
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    @if (post.Categories.Any())
                                    {
                                        @string.Join(", ", post.Categories.Select(c => c.Name))
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">No categories</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    @post.CreatedAt.ToShortDateString()
                                </td>
                                <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                                    @if (post.Status == BlogPostStatus.Published)
                                    {
                                        <a asp-controller="Blog" asp-action="Post" asp-route-slug="@post.Slug" target="_blank" class="text-blue-600 hover:text-blue-900" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    }
                                    <a asp-action="EditBlogPost" asp-route-id="@post.Id" class="text-indigo-600 hover:text-indigo-900" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteBlogPost" asp-route-id="@post.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                <i class="bi bi-file-earmark-text text-4xl mb-3 block"></i>
                                <p class="text-lg mb-2">No blog posts yet</p>
                                <a asp-action="CreateBlogPost" class="text-blue-600 hover:underline">Create your first blog post</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
