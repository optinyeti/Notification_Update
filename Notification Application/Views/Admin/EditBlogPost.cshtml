@model BlogPost
@{
    ViewData["Title"] = "Edit Blog Post";
    var categories = ViewBag.Categories as IEnumerable<BlogCategory> ?? new List<BlogCategory>();
    var tags = ViewBag.Tags as IEnumerable<BlogTag> ?? new List<BlogTag>();
    var selectedCategoryIds = ViewBag.SelectedCategoryIds as List<int> ?? new List<int>();
    var selectedTagIds = ViewBag.SelectedTagIds as List<int> ?? new List<int>();
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Edit Blog Post</h1>
        <p class="text-gray-600 mt-2">Update your blog content</p>
    </div>

    <form asp-action="EditBlogPost" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />
        
        <div class="bg-white rounded-lg shadow p-6 space-y-6">
            <!-- Title -->
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2">Title *</label>
                <input asp-for="Title" type="text" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" required>
                <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
            </div>

            <!-- Excerpt -->
            <div>
                <label asp-for="Excerpt" class="block text-sm font-medium text-gray-700 mb-2">Excerpt</label>
                <textarea asp-for="Excerpt" rows="2" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="A short summary of your post"></textarea>
                <span asp-validation-for="Excerpt" class="text-red-600 text-sm"></span>
            </div>

            <!-- Content -->
            <div>
                <label asp-for="Content" class="block text-sm font-medium text-gray-700 mb-2">Content *</label>
                <textarea asp-for="Content" rows="15" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" required></textarea>
                <p class="text-sm text-gray-500 mt-1">Supports HTML and Markdown</p>
                <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
            </div>

            <!-- Featured Image -->
            <div>
                <label asp-for="FeaturedImage" class="block text-sm font-medium text-gray-700 mb-2">Featured Image URL</label>
                <input asp-for="FeaturedImage" type="url" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="https://example.com/image.jpg">
                <span asp-validation-for="FeaturedImage" class="text-red-600 text-sm"></span>
            </div>

            <!-- Categories -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Categories</label>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                    @foreach (var category in categories)
                    {
                        <label class="flex items-center space-x-2 p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                            <input type="checkbox" name="categoryIds" value="@category.Id" 
                                   @(selectedCategoryIds.Contains(category.Id) ? "checked" : "") 
                                   class="rounded text-blue-600 focus:ring-blue-500">
                            <span class="text-sm">@category.Name</span>
                        </label>
                    }
                </div>
            </div>

            <!-- Tags -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tags</label>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                    @foreach (var tag in tags)
                    {
                        <label class="flex items-center space-x-2 p-2 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                            <input type="checkbox" name="tagIds" value="@tag.Id" 
                                   @(selectedTagIds.Contains(tag.Id) ? "checked" : "") 
                                   class="rounded text-blue-600 focus:ring-blue-500">
                            <span class="text-xs">@tag.Name</span>
                        </label>
                    }
                </div>
            </div>

            <!-- SEO Section -->
            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">SEO Settings</h3>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="MetaDescription" class="block text-sm font-medium text-gray-700 mb-2">Meta Description</label>
                        <textarea asp-for="MetaDescription" rows="3" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="SEO meta description (150-160 characters recommended)"></textarea>
                    </div>

                    <div>
                        <label asp-for="MetaKeywords" class="block text-sm font-medium text-gray-700 mb-2">Meta Keywords</label>
                        <input asp-for="MetaKeywords" type="text" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="keyword1, keyword2, keyword3">
                    </div>
                </div>
            </div>

            <!-- Status -->
            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<BlogPostStatus>()" class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                </select>
            </div>

            <!-- Post Info -->
            <div class="border-t pt-4 text-sm text-gray-500">
                <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")</p>
                @if (Model.UpdatedAt.HasValue)
                {
                    <p><strong>Last Updated:</strong> @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy h:mm tt")</p>
                }
                @if (Model.PublishedAt.HasValue)
                {
                    <p><strong>Published:</strong> @Model.PublishedAt.Value.ToString("MMMM dd, yyyy h:mm tt")</p>
                }
                <p><strong>Views:</strong> @Model.ViewCount</p>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-between items-center">
            <a asp-action="Blog" class="px-4 py-2 text-gray-700 hover:text-gray-900">
                <i class="bi bi-arrow-left me-2"></i>Back to Blog
            </a>
            <div class="space-x-3">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    <i class="bi bi-save me-2"></i>Update Post
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
