@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-gray-600 mt-2">Manage your tenant and view key metrics</p>
        </div>
        <a href="/Popup/CreateCampaign" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition shadow-md flex items-center gap-2">
            <i class="fas fa-plus"></i>
            Create New Campaign
        </a>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-blue-100 p-3 rounded-lg">
                    <i class="fas fa-eye text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Total Views (30d)</h3>
                    <p class="text-2xl font-bold text-blue-600">@((Model.AnalyticsSummary as dynamic)?.TotalViews ?? 0)</p>
                </div>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-green-100 p-3 rounded-lg">
                    <i class="fas fa-mouse-pointer text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Conversions (30d)</h3>
                    <p class="text-2xl font-bold text-green-600">@((Model.AnalyticsSummary as dynamic)?.TotalConversions ?? 0)</p>
                </div>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
            <div class="flex items-center">
                <div class="bg-orange-100 p-3 rounded-lg">
                    <i class="fas fa-life-ring text-orange-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-800">Open Tickets</h3>
                    <p class="text-2xl font-bold text-orange-600">@Model.OpenTickets</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Navigation -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a asp-action="Analytics" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-purple-100 p-3 rounded-lg">
                    <i class="fas fa-chart-bar text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Analytics</h3>
                    <p class="text-sm text-gray-600">View detailed analytics</p>
                </div>
            </div>
        </a>
        
        <a asp-action="Users" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-blue-100 p-3 rounded-lg">
                    <i class="fas fa-users text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">User Management</h3>
                    <p class="text-sm text-gray-600">Manage your team</p>
                </div>
            </div>
        </a>
        
        <a asp-action="Settings" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-green-100 p-3 rounded-lg">
                    <i class="fas fa-cog text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Tenant Settings</h3>
                    <p class="text-sm text-gray-600">Configure your tenant</p>
                </div>
            </div>
        </a>
        
        <a asp-action="Subscription" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-yellow-100 p-3 rounded-lg">
                    <i class="fas fa-credit-card text-yellow-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Subscription</h3>
                    <p class="text-sm text-gray-600">Manage your plan</p>
                </div>
            </div>
        </a>
        
        <a asp-action="Support" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-orange-100 p-3 rounded-lg">
                    <i class="fas fa-life-ring text-orange-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Support Tickets</h3>
                    <p class="text-sm text-gray-600">View and manage tickets</p>
                </div>
            </div>
        </a>
        
        <a asp-action="Templates" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-indigo-100 p-3 rounded-lg">
                    <i class="fas fa-layer-group text-indigo-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Templates</h3>
                    <p class="text-sm text-gray-600">Manage popup templates</p>
                </div>
            </div>
        </a>
        
        <a asp-controller="Home" asp-action="Index" class="block bg-white p-6 rounded-lg shadow border hover:shadow-lg transition">
            <div class="flex items-center">
                <div class="bg-gray-100 p-3 rounded-lg">
                    <i class="fas fa-arrow-left text-gray-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="font-semibold text-gray-900">Back to Dashboard</h3>
                    <p class="text-sm text-gray-600">Return to main dashboard</p>
                </div>
            </div>
        </a>
    </div>
</div>